@model IEnumerable<Models.Topping>
@{
    ViewBag.Title = "Topping";
    int ToppingID = 0;
}
@Html.Action("CakeStyle")

<div class="box otherPagesBox">
    <h2>Pick a Topping!</h2>
    <div class="container">
        <div class="cakeDefault">
            <form action="@Url.Action("PickTopping")" method="post">
                <div class="row">
                    <div class="col-md-6">
                        @foreach (var item in Model)
                        {

                            <div class="cake">
                                <table>
                                    <tr>
                                        <td class="tableEdit3">
                                            @Html.RadioButtonFor(modelItem => ToppingID, item.ToppingID, new { id = "topping" + item.ToppingID })
                                        </td>
                                        <td class="tableEdit2">
                                            <img class="img-responsive" src="~/Content/Images/@Html.DisplayFor(modelItem => item.ImageUrl)">
                                        </td>
                                        <td class="tableEdit1">
                                            <p><span class="subtitle">@Html.DisplayFor(modelItem => item.ToppingDescription)</span> ~ @Html.DisplayFor(modelItem => item.Price)</p>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        }
                    </div>
                    <div class="col-md-6">
                        <h4>Pick a topping and then see your cake!</h4>
                        <div class="cakeWrapper">
                            <div class="cakeBuilderImage"></div>
                        </div>
                    </div>
                </div>
                <br /><br />
                <div class="buttonNext text-center button">
                    <button type="submit" class="text-center button">Let's see this cake!</button>
                </div>
                <br />
            </form>
        </div>
    </div>
</div>
