@model IEnumerable<Models.Topping>

@{
    ViewBag.Title = "Topping";
    string backgroundString = "url(/Content/Images/sponge_chocolate.png);";
}
<style>
    .cakeBuilderImage {
        background-image: @backgroundString
    }
</style>


<div class="box otherPagesBox">

    <h2>Pick a Topping!</h2>
    <div class="container">
        <div class="cakeDefault">
            <p class="cakeDefaultText">
                Pick a topping and Go to Cart!
            </p>
            <div class="row">
                <div class="col-md-6">
                    @foreach (var item in Model)
                    {

                        <div class="cake">
                            <table>
                                <tr>
                                    <td class="tableEdit3">
                                        X @*place holder for radio button*@
                                    </td>
                                    <td class="tableEdit2">
                                        <img class="img-responsive" src="~/Content/Images/@Html.DisplayFor(modelItem => item.ImageUrl)">
                                    </td>
                                    <td class="tableEdit1">
                                        <p><span class="subtitle">@Html.DisplayFor(modelItem => item.ToppingDescription)</span> ~ @Html.DisplayFor(modelItem => item.Price)</p>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    }
                </div>
                <div class="col-md-6">
                    <div class="cakeBuilderImage"></div>
                </div>
            </div>
            <br /><br />
            <div class="buttonNext text-center button">
                <a href="~/Home/Cart">Go to Cart!</a>
            </div>
            <br />
        </div>
    </div>
</div>
