<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="bodyBackground">
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="~/Views/Home/Index.cshtml"><img class="img-responsive logo" src="~/Content/Images/logo2.png"></a>
            </div>
            <div class="nav-items">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-left">
                    <li><a href="~/Home/CakeBase">1.<br/> Start</a></li>
                    <li><a href="~/Home/Icing">2.<br /> Icing</a></li>
                    <li>@Html.ActionLink("3. Topping", "Topping", "Home")</li>
                    <li class="cart"><a href="~/Home/Cart">Cart <span class="glyphicon glyphicon-shopping-cart"></span></a></li>
                    <li class="last pull-right">@Html.ActionLink("Home", "Index", "Home")</li>

                </ul>
            </div>
                </div>
        </div>
    </div>
    <div class="container">
        <div class="body-content">
            @RenderBody()
            </div>
            <hr />
            <footer>
                <div class="row">
                    <div class="col-md-6">
                        <p>&copy; @DateTime.Now.Year - NomNomCakes</p>
                    </div>
                    <div class="col-md-6 adminButton">
                        @Html.ActionLink("Admin", "Index", "Admin")
                    </div>
                </div>
            </footer>
        </div>
        </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
